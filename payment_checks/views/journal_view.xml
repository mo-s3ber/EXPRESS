<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_checkbook_account_journal_form" model="ir.ui.view">
        <field name="name">account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="check_type"/>
            </xpath>
            <xpath expr="//field[@name='bank_account_id']" position="after">
                <field name="holding_check_account_id" attrs="{'invisible': [('check_type', '!=', 'receive')],'required':[('check_type', '=', 'receive')]}"/>
                <field name="deposited_check_account_id" attrs="{'invisible': [('check_type', '!=', 'receive')],'required':[('check_type', '=', 'receive')]}"/>
                <field name="debited_check_account_id" attrs="{'invisible': [('check_type', '!=', 'receive')],'required':[('check_type', '=', 'receive')]}"/>

                <field name="handed_check_account_id" attrs="{'invisible': [('check_type', '!=', 'issue')],'required':[('check_type', '=', 'issue')]}"/>
                <field name="credited_check_account_id" attrs="{'invisible': [('check_type', '!=', 'issue')],'required':[('check_type', '=', 'issue')]}"/>
            </xpath>
            <xpath expr="//page[@name='advanced_settings']" position="after">
                <page string="Checkbooks" attrs="{'invisible': [('check_type', '!=', 'issue')]}">
                    <field name="checkbook_ids">
                        <tree string="Checkbooks" nolabel="1">
                            <field name="name"/>
                            <field name="from_number" string="From Check Number"/>
                            <field name="to_number" string="To Check Number"/>
                            <field name="number_next_actual" string="Next Check Number"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
