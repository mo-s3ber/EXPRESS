    <record id="view_account_payment_internal_form" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="replace">
                <field name="journal_id" widget="selection" domain="[('type', 'in', ('bank', 'cash'))]"
                       attrs="{'readonly': [('state', '!=', 'draft')],'invisible': [('is_internal_transfer', '=', True)]}"/>
                <field name="journal_id" string="Journal from" widget="selection" domain="[('type', 'in', ('bank', 'cash'))]"
                       attrs="{'readonly': [('state', '!=', 'draft')],'invisible': [('is_internal_transfer', '!=', True)]}"/>
                <field name="to_journal_id" widget="selection" domain="[('type', 'in', ('bank', 'cash'))]"
                       attrs="{'required':[('is_internal_transfer', '=', True)],'readonly': [('state', '!=', 'draft')],'invisible': [('is_internal_transfer', '!=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='move_id']" position="after">
                <field name="to_move_id" readonly="1" attrs="{'invisible': [('id', '=', False)]}"/>
            </xpath>
        </field>
    </record>

