<?xml version="1.0" ?>
<odoo>

    <record id="view_payment_check_form" model="ir.ui.view">
        <field name="name">payment.check.form</field>
        <field name="model">payment.check</field>
        <field name="arch" type="xml">
            <form string="Receive Checks">
                <header>
                    <button
                            name="button_canceled"
                            attrs="{'invisible': [('state', 'not in',('handed','deposited','holding'))]}"
                            string="Cancel"
                            type="object"
                    />
                    <button
                            name="button_holding"
                            string="Holding"
                            attrs="{'invisible': ['|',('type', '!=','receive'),('state', 'not in',('draft'))]}"
                            type="object"
                            class="oe_highlight"
                    />
                    <button
                            name="button_handed"
                            string="Handed"
                            attrs="{'invisible': ['|',('type', '!=','issue'),('state', 'not in',('draft'))]}"
                            type="object"
                            class="oe_highlight"
                    />
                    <button
                            name="%(action_transfer_vendor_wizard)d"
                            context="{'default_check_id':id}"
                            attrs="{'invisible': ['|',('type', '!=','receive'),('state', 'not in',('holding'))]}"
                            string="Transfer to Vendor" type="action" class="oe_highlight"/>
                    <button
                            name="button_deposited"
                            string="Deposited"
                            attrs="{'invisible': ['|',('type', '!=','receive'),('state', 'not in',('holding'))]}"
                            type="object"
                            class="oe_highlight"
                    />
                    <button
                            name="button_credited"
                            string="Credited"
                            attrs="{'invisible': ['|',('type', '!=','issue'),('state', 'not in',('handed'))]}"
                            type="object"
                            class="oe_highlight"
                    />
                    <button
                            name="button_debited"
                            string="Debited"
                            attrs="{'invisible': ['|',('type', '!=','receive'),('state', 'not in',('deposited'))]}"
                            type="object"
                            class="oe_highlight"
                    />
                    <button
                            name="button_returned"
                            string="Return"
                            attrs="{'invisible': ['|',('type', '!=','receive'),('state', 'not in',('holding','deposited'))]}"
                            type="object"
                    />
                    <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="draft,holding,handed,deposited,debited,credited,returned,canceled"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="move_tree_view" type="object" icon="fa-bars">
                            <span>Entries</span>
                        </button>
                    </div>
                    <h1>
                        <field readonly="1" force_save="1" name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="checkbook_id" attrs="{'invisible': [('type', '!=','issue')],'readonly': [('state', '!=','draft')]}"
                                   domain="[('journal_id', '=', journal_id),('state', '=', 'in_use')]" widget="selection"/>
                            <field name="number" attrs="{'readonly': [('state', '!=','draft')]}"/>
                            <field name="partner_bank_id" attrs="{'invisible': [('type', '!=','receive')],'readonly': [('state', '!=','draft')]}"/>
                            <field name="journal_id" readonly="1" force_save="1"/>
                            <field name="type" readonly="1" force_save="1"/>
                            <field name="amount" attrs="{'readonly': [('state', '!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="date" string="Due Date" attrs="{'readonly': [('state', '!=','draft')]}"/>
                            <field name="payment_date" string="Issue Date" attrs="{'readonly': [('state', '!=','draft')]}"/>
                            <field name="company_id" groups="base.group_multi_company" attrs="{'readonly': [('state', '!=','draft')]}"/>
                        </group>
                        <group string="Related Document">
                            <field name="payment_id" attrs="{'readonly': [('state', '!=','draft')]}"/>
                            <field name="partner_id" string="Source Partner"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_payment_check_tree" model="ir.ui.view">
        <field name="name">payment.check.tree</field>
        <field name="model">payment.check</field>
        <field name="arch" type="xml">
            <tree string="Checks">
                <field name="payment_id"/>
                <field name="journal_id"/>
                <field name="number"/>
                <field name="date"/>
                <field name="payment_date"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>
    <record id="view_payment_check_search" model="ir.ui.view">
        <field name="name">payment.check.list.select</field>
        <field name="model">payment.check</field>
        <field name="arch" type="xml">
            <search string="Search Payment Check">
                <field name="name"/>
                <field name="number"/>
                <field name="date" string="Issue Date"/>
                <field name="payment_date"/>
                <field name="partner_id"/>
                <separator/>
                <field name="state"/>
                <separator/>
                <separator/>
                <filter string="Issue Date" name="date" date="date"/>
                <filter string="Payment Date" name="payment_date" date="payment_date"/>
                <group expand="0" string="Group By...">
                    <filter
                            name="date"
                            string="Issue Date"
                            icon="fa-calendar"
                            domain="[]"
                            context="{'group_by':'date'}"
                    />
                    <filter
                            name="payment_date"
                            string="Payment Date"
                            icon="fa-calendar"
                            domain="[]"
                            context="{'group_by':'payment_date'}"
                    />
                    <filter
                            name="journal_id"
                            string="Journal"
                            domain="[]"
                            context="{'group_by':'journal_id'}"
                    />
                    <filter
                            name="state"
                            string="Status"
                            domain="[]"
                            context="{'group_by':'state'}"
                    />
                    <filter
                            name="partner_id"
                            string="Partner"
                            domain="[]"
                            context="{'group_by':'partner_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="issue_payment_check_action">
        <field name="name">Issue Checks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.check</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type','=','issue')]</field>
        <field name="search_view_id" ref="view_payment_check_search"/>
    </record>
    <record model="ir.actions.act_window" id="receive_payment_check_action">
        <field name="name">Receive Checks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.check</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type','=','receive')]</field>
        <field name="context">{'default_type': 'receive'}</field>
        <field name="search_view_id" ref="view_payment_check_search"/>
    </record>
    <menuitem
            id="menu_payment_check_parent"
            name="Checks"
            sequence="30"
            parent="account.menu_finance_entries"
    />
    <menuitem
            id="menu_receive_payment_check"
            sequence="1"
            parent="menu_payment_check_parent"
            action="receive_payment_check_action"
    />
    <menuitem
            id="menu_issue_payment_check"
            sequence="2"
            parent="menu_payment_check_parent"
            action="issue_payment_check_action"
    />
</odoo>
