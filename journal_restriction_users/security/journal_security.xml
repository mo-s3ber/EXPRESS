<odoo noupdate="0">
    <record model="ir.rule" id="journal_restricted_security_rule">
        <field name="name">Journals restricted to users</field>
        <field name="model_id" ref="account.model_account_journal"/>
        <field name="domain_force">[('id', 'in', user.journal_ids.ids)]</field>
        <field name="groups"
               eval="[(4, ref('account.group_account_invoice')), (4, ref('account.group_account_readonly')),(4, ref('account.group_account_user'))]"/>
    </record>
    
    <record model="ir.rule" id="journal_restricted_security_rule_account_move">
        <field name="name">Account Move of Jornals restricted to user</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">['|',('journal_id.id', 'in',
            user.journal_ids.ids),('payment_id.journal_id.user_ids', '=', False)]
        </field>
        <field name="groups"
               eval="[(4, ref('account.group_account_user'))]"/>
    </record>

    <record model="ir.rule" id="journal_restricted_security_rule_account_move_line">
        <field name="name">Account Move Line of Jornals restricted to user</field>
        <field name="model_id" ref="account.model_account_move_line"/>
        <field name="domain_force">[('journal_id.id', 'in', user.journal_ids.ids)]
        </field>
        <field name="groups"
               eval="[(4, ref('account.group_account_user'))]"/>
    </record>

    <record model="ir.rule" id="journal_restricted_security_rule_account_payment">
        <field name="name">Account Payments of Jornals restricted to user</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="domain_force">[('journal_id.id', 'in',
            user.journal_ids.ids)]
        </field>
        <field name="groups"
               eval="[(4, ref('account.group_account_invoice')), (4, ref('account.group_account_readonly')),(4, ref('account.group_account_user'))]"/>
    </record>

    <record model="ir.rule" id="journal_restricted_security_rule_user_admin">
        <field name="name">Journals restricted to admin</field>
        <field name="model_id" ref="account.model_account_journal"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
    </record>

    <record model="ir.rule" id="journal_restricted_security_rule_account_move_user_admin">
        <field name="name">Account Move of Jornals restricted to admin</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
    </record>

    <record model="ir.rule" id="journal_restricted_security_rule_account_move_line_user_admin">
        <field name="name">Account Move Line of Jornals restricted to admin</field>
        <field name="model_id" ref="account.model_account_move_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
    </record>

    <record model="ir.rule" id="journal_restricted_security_rule_account_payment_user_admin">
        <field name="name">Account Payments of Jornals restricted to admin</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
    </record>
</odoo>
