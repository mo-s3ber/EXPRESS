    <record id="view_bank_statement_line_inherited_tree" model="ir.ui.view">
        <field name="name">view_bank_statement_line_inherited_tree</field>
        <field name="model">account.bank.statement.line</field>
        <field name="inherit_id" ref="account.view_bank_statement_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='amount']" position="replace">
                <field name="amount" sum="Total"/>
            </xpath>
        </field>
    </record>

    <record id="view_bank_statement_line_inherited_search" model="ir.ui.view">
        <field name="name">view_bank_statement_line_inherited_search</field>
        <field name="model">account.bank.statement.line</field>
        <field name="inherit_id" ref="account.view_bank_statement_line_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='journal_id']" position="after">
                <field name="amount"/>
                <separator/>
                <filter string="Received" name="amount" domain="[('amount','&gt;',0.0)]"/>
                <filter string="Paid" name="amount" domain="[('amount','&lt;',0.0)]"/>
            </xpath>
        </field>
    </record>

</odoo>
